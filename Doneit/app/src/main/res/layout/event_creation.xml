<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateTodoActivity"
    android:background="@color/colorPrimary">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/cardview_bottom_guideline"
        app:layout_constraintEnd_toStartOf="@+id/cardview_right_guideline"
        app:layout_constraintStart_toStartOf="@+id/cardview_left_guideline"
        app:layout_constraintTop_toTopOf="@+id/cardview_top_guideline">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">




            <TextView
                android:id="@+id/current_date"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="TextView"
                android:textAlignment="center"
                android:autoSizeTextType="uniform"
                app:layout_constraintBottom_toTopOf="@+id/inner_cardview_bottom7"
                app:layout_constraintEnd_toStartOf="@+id/inner_cardview_right"
                app:layout_constraintStart_toStartOf="@+id/inner_cardview_left"
                app:layout_constraintTop_toTopOf="@+id/inner_cardview_bottom8" />

            <EditText
                android:id="@+id/titleText"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/todo_edittext_create_todo"
                android:ems="10"
                android:hint="Titolo"
                android:inputType="textPersonName"
                app:layout_constraintBottom_toTopOf="@+id/inner_cardview_bottom9"
                app:layout_constraintEnd_toStartOf="@+id/inner_cardview_right"
                app:layout_constraintHorizontal_bias="0.51"
                app:layout_constraintStart_toStartOf="@+id/inner_cardview_left"
                app:layout_constraintTop_toTopOf="@+id/inner_cardview_bottom10" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/inner_cardview_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.9" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/inner_cardview_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.1" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/inner_cardview_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.95" />

            <EditText
                android:id="@+id/descriptionText"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/todo_edittext_create_todo"
                android:ems="10"
                android:hint="Descrizione"
                android:inputType="textPersonName"
                app:layout_constraintBottom_toTopOf="@+id/inner_cardview_bottom4"
                app:layout_constraintEnd_toStartOf="@+id/inner_cardview_right"
                app:layout_constraintStart_toStartOf="@+id/inner_cardview_left"
                app:layout_constraintTop_toTopOf="@+id/inner_cardview_bottom5" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/inner_cardview_bottom3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.87" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/inner_cardview_bottom4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.8" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/inner_cardview_bottom5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.65" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/inner_cardview_bottom2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.6" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/inner_cardview_bottom6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.5" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/inner_cardview_bottom7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.45" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/inner_cardview_bottom8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.35" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/inner_cardview_bottom9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.3" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/inner_cardview_bottom10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.2" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/inner_cardview_top"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.05" />

            <Button
                android:id="@+id/create_event"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_sign"
                android:text="Crea Evento"
                app:layout_constraintBottom_toTopOf="@+id/inner_cardview_bottom"
                app:layout_constraintEnd_toStartOf="@+id/inner_cardview_right"
                app:layout_constraintStart_toStartOf="@+id/inner_cardview_left"
                app:layout_constraintTop_toTopOf="@+id/inner_cardview_bottom3" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/cardview_top_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.04" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/cardview_bottom_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.96" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/cardview_right_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.97" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/cardview_left_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.03" />

</androidx.constraintlayout.widget.ConstraintLayout>